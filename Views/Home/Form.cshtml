@model Shindig
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ActivityCenter</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex ">
                <ul class="navbar-nav flex-grow-1 flex-sm-row-reverse">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Logout" class="btn btn-primary">Logout</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Dashboard" class="me-1 btn btn-primary">Dashboard</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div>
    <h2>Create an Activity</h2>
</div>
<form action="/details" method="post">
    <div class="m-3 row">

        <div class="col">
            <div class="row">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input asp-for="title" class="form-control">
                    <span asp asp-validation-for="title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="date">Date</label>
                    <input asp-for="date" class="form-control">
                    <span asp asp-validation-for="date" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="startTime">Time:</label>
                    <input asp-for="startTime" class="form-control">
                    <span asp asp-validation-for="startTime" class="text-danger"></span>
                </div>
                <div class="d-flex">
                    <div class="form-group">
                        <label for="duration">Duration:</label>
                        <input asp-for="duration" class="form-control">
                        <span asp asp-validation-for="duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select name="durationAmt" class="pt=32 form-control">
                            <option value="Hours">Hours</option>
                            <option value="Minutes">Minutes</option>
                            <option value="Days">Days</option>
                        </select>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="m-3 form-group purple-border">
        <label for="description">Description:</label>
        <textarea asp-for="description" class="form-control" rows="3"></textarea>
    </div>
    <input type="hidden" name="userId" Value="@ViewBag.userId">
    <div class="m-3 form-group">
        <input type="submit" value="Create Activity" class="btn btn-warning">
    </div>
</form>